@using LicentaTest.Models.Register
@model AddMyUserModel

<div class="about-section">
@{
    ViewData["Title"] = "Autentificare";
}
<h1>@ViewData["Title"]</h1>

<p>Completeaza datele de mai jos pentru a te loga pe site.</p>
   
        <div class="col-2"></div>
</div>
<div class="container text-center recenzie align-content-center">

<form class="login:" asp-controller="Login" asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group light-blue">
        <div class="row">
            <div class="col-4">
                <label asp-for="UserName"> Adresa de mail</label>
            </div>
            <div class="col-8">
                <input asp-for="UserName" class="form-control" type="email"/>
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group light-blue">
        <div class="row">
            <div class="col-4">
                <label asp-for="Password"> Parola</label>
            </div>
            <div class="col-8">
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" name="log" id="log" value="Autentifica-ma">
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


