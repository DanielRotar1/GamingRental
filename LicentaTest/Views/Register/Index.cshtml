@using LicentaTest.Models.Register
@{
    ViewData["Title"] = "Inregistreaza-te";
}
@model AddMyUserModel
<div class="container">
<div class="row">

    <div class="containerRegister text-center recenzie align-content-center">
    <h1 class="about-section">@ViewData["Title"]</h1>

    <p class="about-section">Completeaza datele de mai jos pentru a te inregistra pe site.</p>

<form class="login" asp-controller="Register" asp-action="Register" method="post">
        <div class="col-8"></div>
        <div class="col-12">
    <div asp-validation-summary="All" class="text-danger "></div>
    <div class="form-group col-8 ">
        <div class="row">
            <div class="col-4">
                <label asp-for="UserName">Cont</label>
            </div>
            <div class="col-8">
                <input asp-for="UserName" class="form-control" type="email" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-8">
        <div class="row">
            <div class="col-4">
                <label asp-for="Password"></label>
            </div>
            <div class="col-8">
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
                </div>
    <div class="form-group col-8">
        <div class="row">
            <div class="col-4">
                            <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="col-8">
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" name="log" id="log" value="Inregistreaza-ma">
</form>
        </div>
    
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
