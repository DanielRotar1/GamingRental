@using LicentaTest.Data.Entities
@using LicentaTest.Data.Repositories
@using LicentaTest.Models.CarTypes
@using LicentaTest.Models.Register
@inject IRepository<CarType> carTypeRepository
@{
    ViewData["Title"] = "CarType";
}
@model CarTypeModel
<div class="containerRegister">
    <div class="col-4"></div>
    <div class="col-10">
        <h1 class="about-section">@ViewData["Title"]</h1>

        <p class="about-section">Completeaza datele de mai jos pentru a introdu un nou tip de masina.</p>

        <form asp-controller="CarTypes" asp-action="AddCarType" method="post">
            <div class="col-8"></div>
            <div class="col-10">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group col-8">
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Description" class="form-control" type="text" />
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" name="log" id="log" value="Adauga">
        </form>

        <form asp-controller="CarTypes" asp-action="DeleteCarType" method="post">
            <div class="col-8"></div>
            <div class="col-10">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group col-8">
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="CarTypeId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="CarTypeId" id="Select1" class="form-select" asp-items="@(new SelectList(carTypeRepository.GetAll(),"Id", "Description"))"><option value="" selected disabled>---Selectea-za Tipul Masinii---</option></select>
                        </div>
                        <span asp-validation-for="CarTypeId" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" name="del" id="del" value="Sterge">
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
