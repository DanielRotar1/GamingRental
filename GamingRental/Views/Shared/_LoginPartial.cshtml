@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav flex-grow-1">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item header-elements">
            <div class="nav-link text-dark" >Salutare @User.Identity?.Name!</div>
        </li>
        <li class="nav-item header-elements">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Deconectare</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item header-elements">
            <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Index">Inregistreaza-te</a>
        </li>
        <li class="nav-item header-elements">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Autentificare</a>
        </li>
    }
</ul>
